<div class="flex h-screen antialiased text-gray-800">
    <div class="flex flex-row h-full w-full overflow-x-hidden">
      <div class="flex flex-col py-8 pl-6 pr-2 w-64 bg-white flex-shrink-0">        
        <% if @single_room %>
        <%= turbo_stream_from @single_room %>
        <%= render 'users/get_name' %>      
        <div class="flex flex-col mt-8">
          <div class="flex flex-row items-center justify-between text-xs">
            <span class="font-bold">Active Conversations</span>
            <span class="flex items-center justify-center bg-gray-300 h-4 w-4 rounded-full"><%=  %></span>
          </div>
          <div class="flex flex-col space-y-1 mt-4 -mx-2 h-48 overflow-y-auto">
            <%= turbo_stream_from "users" %>
            <div id="users">
            <%= render @users %>
          </div>
          </div>
          <div class="flex flex-col items-center justify-between text-xs mt-6">
            <span class="font-bold">Room</span>
            <%= render partial: "layouts/new_room_form" %>
            <span class="flex items-center justify-center bg-gray-300 h-4 w-4 rounded-full">7</span>
          </div>
          <div class="flex flex-col space-y-1 mt-4 -mx-2">
            <%= turbo_stream_from "rooms" %>
            <div id="rooms">
              <%= render @rooms %>
            </div>
          </div>
          <span class="flex h-8"></span>
          <%= render 'komponen/signout' %>
        </div>
        <% end %>
      </div>
      <div class="flex flex-col flex-auto h-full p-6">
          <span class="flex justify-center ml-2 font-bold text-2xl items-center h-8 p-6">
            
        <div class="flex flex-col flex-auto flex-shrink-0 rounded-2xl bg-gray-100 h-full p-4 items-center">
          <div class="flex flex-col h-full w-full overflow-x-auto mb-4">
            <div class="flex flex-col h-full">
              <div class="grid grid-cols-12 gap-y-2">
                <div class="col-start-1 col-end-12 p-3 rounded-lg">
                  <div class="flex-grow items-center">
                  <% if @single_room %>
                    <%= turbo_stream_from @single_room %>
                    <div id="messages">
                      <%= render @pesans %>
                    </div>
                    <%= render partial: 'layouts/new_pesan_form' %>
                  <% end %>                 
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>